using System;

namespace oopTask2
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Player player = new Player('A', 4, 3);
            Renderer renderer = new Renderer();
            renderer.DrawPlayer(player);
        }
    }

    public class Player
    {
        private char _char;
        private int _positionX;
        private int _positionY;

        public char Char
        {
            get { return _char; }
            set { _char = value; }
        }

        public int PositionX
        {
            get { return _positionX; }
            private set { _positionX = value; }
        }

        public int PositionY
        {
            get { return _positionY; }
            private set { _positionY = value; }
        }

        public Player(char playerChar = '@', int playerPositionX = 0, int playerPositionY = 0)
        {
            Char = playerChar;
            PositionX = playerPositionX;
            PositionY = playerPositionY;
        }
    }

    public class Renderer
    {
        public void DrawPlayer(Player player)
        {
            Console.SetCursorPosition(player.PositionX, player.PositionY);
            Console.WriteLine(player.Char);
        }
    }
}
